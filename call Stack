<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Call Stack Visualization</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin-top: 30px;
    }
    .stack {
      width: 200px;
      margin: 20px auto;
      border: 2px solid black;
      min-height: 250px;
      display: flex;
      flex-direction: column-reverse; /* stack grows upward */
      align-items: center;
      padding: 5px;
    }
    .frame {
      width: 150px;
      padding: 10px;
      margin: 5px;
      background: lightblue;
      border: 1px solid #333;
      border-radius: 5px;
    }
    button {
      margin: 10px;
      padding: 8px 15px;
      font-size: 16px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h2>JavaScript Call Stack (Demo)</h2>
  <button onclick="start()">Run Example</button>

  <div class="stack" id="stack"></div>

  <script>
    const stackDiv = document.getElementById("stack");

    function pushFrame(name) {
      let frame = document.createElement("div");
      frame.className = "frame";
      frame.innerText = name;
      frame.id = name;
      stackDiv.appendChild(frame);
    }

    function popFrame(name) {
      let frame = document.getElementById(name);
      if (frame) stackDiv.removeChild(frame);
    }

    function first() {
      pushFrame("first()");
      setTimeout(() => {
        second();
        popFrame("first()");
      }, 800);
    }

    function second() {
      pushFrame("second()");
      setTimeout(() => {
        third();
        popFrame("second()");
      }, 800);
    }

    function third() {
      pushFrame("third()");
      setTimeout(() => {
        popFrame("third()");
      }, 800);
    }

    function start() {
      stackDiv.innerHTML = ""; // reset stack
      first();
    }
  </script>
</body>
</html>
