<!DOCTYPE html>
<html>
<head>
  <title>Loops in JS</title>
</head>
<body>
  <h3>JavaScript Loops Example</h3>

  <pre>
// For loop
for (let i = 1; i <= 3; i++) {
  console.log("For Loop: " + i);
}

// While loop
let j = 1;
while (j <= 3) {
  console.log("While Loop: " + j);
  j++;
}

// Do...while loop
let k = 1;
do {
  console.log("Do...While Loop: " + k);
  k++;
} while (k <= 3);
  </pre>

  <script>
    // For loop
    for (let i = 1; i <= 3; i++) {
      alert("For Loop: " + i);
    }

    // While loop
    let j = 1;
    while (j <= 3) {
      alert("While Loop: " + j);
      j++;
    }

    // Do...while loop
    let k = 1;
    do {
      alert("Do...While Loop: " + k);
      k++;
    } while (k <= 3);
  </script>
</body>
</html>
