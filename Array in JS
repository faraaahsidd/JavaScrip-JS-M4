<!DOCTYPE html>
<html>
<head>
  <title>Array in JS</title>
</head>
<body>
  <h3>JavaScript Arrays</h3>

  <pre>
// Create an array
let fruits = ["Apple", "Banana", "Mango"];

// Access values
console.log(fruits[0]);  // Apple
console.log(fruits[2]);  // Mango

// Add new item
fruits.push("Orange");

// Remove last item
fruits.pop();

// Loop through array
for (let i = 0; i < fruits.length; i++) {
  console.log(fruits[i]);
}
  </pre>

  <script>
    let fruits = ["Apple", "Banana", "Mango"];

    alert("First fruit: " + fruits[0]);  
    alert("Last fruit: " + fruits[2]);

    fruits.push("Orange"); // add
    fruits.pop();          // remove

    let list = "";
    for (let i = 0; i < fruits.length; i++) {
      list += fruits[i] + " ";
    }
    alert("Fruits: " + list);
  </script>
</body>
</html>
