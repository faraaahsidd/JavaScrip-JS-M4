<!-- below is the js file -->

function showDOM(node, indent = "") {
  let out = indent + node.nodeName + "\n";
  node.childNodes.forEach(c => out += showDOM(c, indent + "  "));
  return out;
}

document.getElementById("output").textContent =
  showDOM(document.getElementById("box"));
